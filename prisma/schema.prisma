generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Caviste {
  id          Int           @id @default(autoincrement())
  nom         String
  adresse     String
  stocks      Stock[]
  reservation Reservation[]
}

model Vin {
  id          Int           @id @default(autoincrement())
  nom         String
  domaine     String
  ann√©e      Int
  prix        Float
  couleur     String        //"rouge" | "blanc" | "rose"
  stocks      Stock[]
  reservation Reservation[]
}

model Stock {
  id        Int     @id @default(autoincrement())
  vinId     Int
  cavisteId Int
  quantite  Int

  vin       Vin     @relation(fields: [vinId], references: [id], onDelete: Cascade)
  caviste   Caviste @relation(fields: [cavisteId], references: [id], onDelete: Cascade)
}

model Reservation {
  id        String  @id @default(cuid())
  vinId     Int
  cavisteId Int
  date      DateTime @default(now())
  status    String   @default("en_attente")

  vin       Vin     @relation(fields: [vinId], references: [id], onDelete: Cascade)
  caviste   Caviste @relation(fields: [cavisteId], references: [id], onDelete: Cascade)
}
