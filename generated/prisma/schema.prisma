generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Caviste {
  id      Int     @id @default(autoincrement())
  nom     String
  adresse String
  vins    Stock[]
}

model Vin {
  id      Int     @id @default(autoincrement())
  nom     String
  domaine String
  ann√©e  Int
  prix    Float
  stocks  Stock[]
}

model Stock {
  id        Int     @id @default(autoincrement())
  caviste   Caviste @relation(fields: [cavisteId], references: [id])
  cavisteId Int
  vin       Vin     @relation(fields: [vinId], references: [id])
  vinId     Int
  quantite  Int
}
